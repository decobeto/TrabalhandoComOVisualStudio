@model IEnumerable<TrabalhandoComOVisualStudio.Models.Product>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width" />
    <title>Trabalhando com o Visual Studio</title>
</head>
<body>
    <table>
        <thead>
            <tr>
                <td>Nome</td>
                <td>Preço</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.Price</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>